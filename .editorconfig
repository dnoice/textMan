# EditorConfig helps maintain consistent coding styles across different editors and IDEs
# https://editorconfig.org

# Top-most EditorConfig file
root = true

# ============================================================================
# Default settings for all files
# ============================================================================
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# ============================================================================
# HTML Files
# ============================================================================
[*.html]
indent_size = 2
max_line_length = 120

# ============================================================================
# CSS Files
# ============================================================================
[*.css]
indent_size = 4
max_line_length = 120

# ============================================================================
# JavaScript Files
# ============================================================================
[*.{js,mjs,cjs}]
indent_size = 4
max_line_length = 120
quote_type = single

# ============================================================================
# JSON Files
# ============================================================================
[*.json]
indent_size = 2

# package.json specifically
[package.json]
indent_size = 2

# ============================================================================
# Markdown Files
# ============================================================================
[*.md]
indent_size = 2
trim_trailing_whitespace = false
max_line_length = 120

# ============================================================================
# YAML Files (for future CI/CD)
# ============================================================================
[*.{yml,yaml}]
indent_size = 2

# ============================================================================
# Configuration Files
# ============================================================================

# .env files
[.env*]
insert_final_newline = false

# .gitignore, .gitattributes
[.git*]
insert_final_newline = true

# ============================================================================
# Firebase Configuration (for upcoming Firebase integration)
# ============================================================================
[firebase.json]
indent_size = 2

[firestore.rules]
indent_size = 2

[firestore.indexes.json]
indent_size = 2

# ============================================================================
# Notes
# ============================================================================
#
# Supported Editors:
# - VS Code (native)
# - WebStorm/IntelliJ (native)
# - Sublime Text (plugin required)
# - Atom (plugin required)
# - Vim (plugin required)
# - Emacs (plugin required)
#
# Rationale:
# - UTF-8: Universal character encoding
# - LF: Unix-style line endings (better for git, cross-platform compatibility)
# - Spaces over tabs: More consistent across editors
# - Indent sizes: 2 for markup (HTML, JSON), 4 for code (JS, CSS)
# - Trailing whitespace: Removed to prevent git diff noise
# - Final newline: POSIX standard, prevents git warnings
#
# ============================================================================
